{
  "editor.lineNumbers": "relative",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "none",
  "editor.cursorSurroundingLines": 8,
  "editor.rulers": [ 120 ],

  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": false,

  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.confirmSync": false,
  "markdown-pdf.emoji": false,
  "markdown-pdf.displayHeaderFooter": false,

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.preferences.quoteStyle": "single",

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "vim.leader": " ",

  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],

  "vim.normalModeKeyBindings": [

    // Splits
    {
      "before": ["<leader>", "v"],
      "after": ["<C-w>", "v"]
    },
    {
      "before": ["<leader>", "s"],
      "after": ["<C-w>", "s"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<leader>", "j"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<leader>", "k"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["<C-w>", "l"]
    },

    // Tabs
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.moveEditorLeftInGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.moveEditorRightInGroup"]
    },

    {
      "before": ["Z", "Z"],
      "commands": ["workbench.action.files.save", "workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "+"],
      "commands": ["workbench.action.increaseViewSize"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.decreaseViewSize"]
    },

    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },

    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },

    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },

    {
      "before": ["<leader>", "."],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["extension.switchTemplate"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-v>": false,
    "<C-x>": false,
    "<C-r>": true,
    "<C-o>": true,
    "<C-i>": true,
    "<C-h>": true,
    "<C-l>": true
  }
}

